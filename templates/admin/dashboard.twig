{% extends 'admin/layout.twig' %}

{% block content %}
<h1>Dashboard</h1>

<div class="stats">
    <div class="stat-card">
        <h3>Products</h3>
        <div class="stat-number">{{ productCount }}</div>
        <a href="/admin/products">View Products</a>
    </div>
    <div class="stat-card">
        <h3>Orders</h3>
        <div class="stat-number">{{ orderCount }}</div>
        <a href="/admin/orders">View Orders</a>
    </div>
    <div class="stat-card">
        <h3>Customers</h3>
        <div class="stat-number">{{ customerCount }}</div>
        <a href="/admin/customers">View Customers</a>
    </div>
</div>
{% endblock %}
